@model IEnumerable<ListPeople.Models.Person>
@{
    ViewBag.Title = "Index";
}

<h1>Index</h1>

<h2>Pessoas</h2>

<a href="/people/Create" class="btn btn-default">Nova Pessoa</a>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Idade</th>
            <th>Ações</th>
        <tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.age</td>
                <td>
                    <a href="/people/Edit/@item.id" class="btn btn-primary">Editar</a>
                    <a href="/people/Delete/@item.id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

