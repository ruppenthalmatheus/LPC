@model Spends.Models.Category
@{
    ViewBag.Title = "Nova Categoria | SCD - Sistema de Controle de Despesas";
}

<br />

<center><img src="~/Content/Logo.png" /></center>

<br />

<div class="content">
    <center><h2>Nova Categoria</h2></center>

    <br />

    <form action="/categories/Create" method="post">
        <div class="form-horizontinal">

            <div class="form-group">
                <label>Nome da Categoria*</label>
                <input class="form-control" type="text" required="required" name="name" />
            </div>
            <br />
            <p>* Campos obrigatórios</p>
            <br />
            <br />

            <div class="form-group">
                <button class="btn btn-success">Cadastrar&nbsp;<i class="glyphicon glyphicon-ok"></i></button>
            </div>

        </div>
    </form>
</div>