@model IEnumerable<Association.Models.City>

<h1>PÁGINA INICIAL</h1>

<h2>Cidades</h2>

<a href="/cities/Create" class="btn btn-default">Cadastrar Cidade</a>

<table class="table">
    <thead>
        <tr>
            <th>Código da Cidade</th>
            <th>Nome</th>
            <th>Estado</th>
        <tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.name</td>
                <td>@item.state</td>
                <td>
                    <a href="/cities/Edit/@item.id" class="btn btn-primary">Editar</a>
                    <a href="/cities/Delete/@item.id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

